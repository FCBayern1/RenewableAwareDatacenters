<configuration>
    <!-- 控制台 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 一般文件 -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/simulation_output.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 结果文件 -->
    <appender name="RESULTS" class="ch.qos.logback.core.FileAppender">
        <file>logs/episode_results.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 错误文件（仅 ERROR 以上） -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/error.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <!-- 你的项目日志 -->
    <logger name="joshua.green" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="joshua.green.data.FedRL" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="joshua.green.FedRL.RLClient" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="joshua.green.FedRL.rltest.results" level="INFO" additivity="false">
        <appender-ref ref="RESULTS"/>
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="joshua.green.newFedRL" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </logger>
    <logger name="joshua.green.newFedRL.DatacenterGreenAware" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="org.cloudsimplus" level="ERROR" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
    <logger name="org.cloudbus.cloudsim" level="ERROR" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
    <logger name="CloudletScheduler" level="ERROR" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
    <logger name="VmScheduler" level="ERROR" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
    <logger name="Datacenter" level="ERROR" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
    <logger name="Host" level="ERROR" additivity="false">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>

    <!-- 根日志（保留 WARN；不影响上面 additivity=false 的包） -->
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>
</configuration>
